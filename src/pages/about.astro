import BaseLayout from '../layouts/BaseLayout.astro';

const skills = [
  {
    name: 'Kubernetes',
    level: 85,
    icon: SiKubernetes,
  },
  {
    name: 'TypeScript',
    level: 85,
    icon: SiTypescript,
  },
  {
    name: 'Angular',
    level: 65,
    icon: FaReact,
  },
  {
    name: 'Node.js',
    level: 82,
    icon: FaNodeJs,
  },
];
---
